        <script>

            $(document).ready(function () {

                $(".up").click(function () {
                    $('html, body').animate({
                        scrollTop: 0
                    }, 700);
                });
            });
        </script>

        <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>

        <script>
