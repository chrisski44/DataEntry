        color: #0063A7;
    }

    h1 {
        text-align: center;
        text-transform: uppercase;
        letter-spacing: -2px;
        font-size: 2.5em;
        margin: 20px 0;
    }

    .container {
        width: 90%;
        margin: auto;
    }

    table {
        border-collapse: collapse;
        width: 100%;
        border-spacing: 50px;
    }

    .blue {
        border: 2px solid #0063A7;
    }

        .blue thead {
            background: #0063A7;
        }

    thead {
        color: white;
    }

    th, td {
        text-align: center;
        padding-left: 30px;
        padding-right: 30px;
        padding-top: 10px;
        padding-bottom: 10px;
        white-space: nowrap;
    }

    tbody tr:nth-child(even) {
        background: #ECF0F1;
    }

    tbody tr:nth-child(odd) {
        background: #FFFFFF;
    }

    tbody tr:hover {
        background: #BDC3C7;
        color: #FFFFFF;
    }

    .fixed {
        top: 0;
        position: fixed;
        width: auto;
        display: none;
        border: none;
    }

    .scrollMore {
        margin-top: 200px;
    }

    .up {
        cursor: pointer;
    }

    label {
        display: inline-block;
        width: 5em;
    }

    #tabs-1, #tabs-2, #tabs-3,#tabs {
        background-color: #0063A7;
    }
    .tab-color{
        background-color: #0063A7;
    }
</style>

